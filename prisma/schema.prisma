datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id        String                @id @default(cuid())
  slug      String                @unique
  viewCount Int                   @default(0)
  likes     ArticleLikesPerUser[]
}

// TODO ðŸš© enable referential actions (preview feature)
// TODO ðŸš© test default referential actions (delete an Article, update a slug)

model ArticleLikesPerUser {
  article     Article @relation(fields: [articleSlug], references: [slug])
  articleSlug String
  userId      String
  count       Int

  @@unique([articleSlug, userId])
}
