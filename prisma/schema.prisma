// https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model Article {
  id        String                @id @default(cuid())
  slug      String                @unique
  viewCount Int                   @default(0)
  likes     ArticleLikesPerUser[]
}

model ArticleLikesPerUser {
  article     Article @relation(fields: [articleSlug], references: [slug], onDelete: Cascade, onUpdate: Cascade)
  articleSlug String
  userId      String
  count       Int

  @@unique([articleSlug, userId])
}
